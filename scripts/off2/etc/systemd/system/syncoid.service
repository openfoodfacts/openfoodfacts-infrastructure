[Unit]
Description=Sync ZFS Pool
Requires=zfs.target
After=zfs.target 
After=sanoid.service
ConditionFileNotEmpty=/etc/sanoid/syncoid-args.conf

[Service]
Environment=TZ=UTC
Type=oneshot
ExecStart=/bin/bash -c "while read args;do syncoid --quiet $args;done </etc/sanoid/syncoid-args.conf"

[Install]
WantedBy=sanoid.service

